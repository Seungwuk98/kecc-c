// RUN: kecc-opt %s --canonicalize-constant --gvn | FileCheck %s


fun i32 @main () {
init:
  bid: b0
  allocations: 


block b0:
  %b0:i0:u8 = typecast 0:i64 to u8
  %b0:i1:u8 = sub %b0:i0:u8 1:u8
