// RUN: kecc-test-executor %s --test-return-value=1
// RUN: keci %s --test-return-value=1
// RUN: kecc-opt %s --mem2reg | FileCheck %s

var i32 @nonce = 1
// CHECK: var i32 @nonce = 1

fun i32 @main () {
init:
  bid: b0
  allocations: 
    %l0:i32:x

block b0:
  %b0:i0:i32 = load @nonce:i32*
  %b0:i1:unit = store %b0:i0:i32 %l0:i32*
  %b0:i2:i32 = load %l0:i32*
  ret %b0:i2:i32
}
// CHECK-LABEL: fun i32 @main () {
// CHECK-NEXT: init:
// CHECK-NEXT:   bid: b0
// CHECK-NEXT:   allocations:
// CHECK-NEXT:     %l0:i32:x

// CHECK-LABEL: block b0:
// CHECK-NEXT:   %b0:i0:i32 = load @nonce:i32*
// CHECK-NEXT:   %b0:i1:unit = nop
// CHECK-NEXT:   %b0:i2:unit = nop
// CHECK-NEXT:   ret %b0:i0:i32
// CHECK-NEXT: }
